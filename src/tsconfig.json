{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strict": true,
    },
    "include": [
        "**/*.ts",
        "**/gluu/**.ts"
    ],
    "exclude": ["node_modules"]
}